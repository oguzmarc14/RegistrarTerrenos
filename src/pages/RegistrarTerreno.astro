
  <body class="p-6 max-w-xl mx-auto font-sans">
    <h1 class="text-2xl font-bold mb-4">Agregar terreno</h1>

    <form id="formularioTerreno" class="space-y-4" enctype="multipart/form-data">
      <input name="titulo" placeholder="Título" required class="w-full border p-2 rounded" />
      <textarea name="descripcion" placeholder="Descripción" required class="w-full border p-2 rounded"></textarea>
      <input name="precio" type="number" placeholder="Precio" required class="w-full border p-2 rounded" />
      <input name="medidas" placeholder="Medidas (Ej. 120x60)" class="w-full border p-2 rounded" />
      <input name="ubicacion" placeholder="Ubicación" class="w-full border p-2 rounded" />
      <input name="imagen" type="file" accept="image/*" required class="w-full" />
      <button type="submit" class="bg-green-700 text-white px-4 py-2 rounded">Subir terreno</button>
    </form>

    <!-- Vincula el archivo externo -->
    <script type="module" src="/src/scripts/RegistrarTerreno.ts"></script>
