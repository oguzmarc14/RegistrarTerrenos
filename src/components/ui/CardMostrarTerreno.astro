  ---
  interface Props {
    titulo: string;
    descripcion: string;
    precio: number;
    imagenes: string[];
    textBoton: string;
    hrefBoton: string; // ya no lo usaremos, pero lo dejo por compat
    medidas?: string;
    ubicacion?: string;
    fecha?: string;
  }

  const {
    titulo,
    descripcion,
    precio,
    imagenes = [],
    medidas,
    ubicacion,
    fecha,
    textBoton,
  } = Astro.props;

  // Si quieres usar los web components de Swiper empacados por Vite:
  import 'swiper/element/bundle';
  ---

  <article class="relative bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 h-160">
    <!-- Carrusel -->
    <swiper-container
      class="w-full h-70 rounded-t-2xl"
      slides-per-view="1"
      pagination="true"
      navigation="true"
      loop={imagenes.length > 1 ? 'true' : 'false'}
    >
      {imagenes.length > 0 ? (
        imagenes.map((img, i) => (
          <swiper-slide>
            <img
              src={img}
              alt={`${titulo} imagen ${i + 1}`}
              class="w-full h-70 object-cover"
              loading="lazy"
            />
          </swiper-slide>
        ))
      ) : (
        <swiper-slide>
          <img
            src="/no-image.jpg"
            alt="Sin imagen"
            class="w-full h-70 object-cover"
            loading="lazy"
          />
        </swiper-slide>
      )}
    </swiper-container>

    <!-- Contenido -->
    <div class="p-4 space-y-2">
      <h2 class="text-xl font-bold">{titulo}</h2>
      <p class="text-sm text-gray-700">{descripcion}</p>
      <p class="text-green-700 font-semibold">${Number(precio).toLocaleString()} MXN</p>
      {medidas && <p class="text-sm text-gray-500">Medidas: {medidas}</p>}
      {ubicacion && <p class="text-sm text-gray-500">Ubicación: {ubicacion}</p>}
      {fecha && (
        <p class="text-xs text-gray-400">
          Publicado: {new Date(fecha).toLocaleDateString()}
        </p>
      )}

      <!-- Botón WhatsApp -->
      <a
        href={`https://wa.me/524759513349?text=${
          encodeURIComponent(
            `Hola, quiero información de este terreno: ${titulo}${ubicacion ? ` en ${ubicacion}` : ''}`
          )
        }`}
        target="_blank"
        rel="noopener noreferrer"
        class="absolute bottom-5 left-4 bg-gradient-to-b from-blue-900 to-blue-500 px-3 py-2 rounded-2xl text-white border-2 border-blue-600"
      >
        {textBoton}
      </a>
    </div>
  </article>


  <!-- ✅ Import Swiper Web Components -->
  <script type="module">
    import "swiper/element/bundle";
  </script>
