---
// GoogleMapCoords.astro
interface Props {
  lat: number;
  lon: number;
  zoom?: number;
}

const {
  lat,
  lon,
  zoom = 17,
} = Astro.props;
---

<iframe
  class="w-full h-full"
  style="border:0;"
  loading="lazy"
  allowfullscreen
  referrerpolicy="no-referrer-when-downgrade"
  src={`https://maps.google.com/maps?q=${lat},${lon}&hl=es&z=${zoom}&output=embed`}
></iframe>
