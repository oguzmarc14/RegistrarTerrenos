---
// GoogleMapCoords.astro
interface Props {
  lat: number;
  lon: number;
  zoom?: number;
  ancho?: string;
  alto?: string;
}

const {
  lat,
  lon,
  zoom = 17,
  ancho = "100%",
  alto = "450"
} = Astro.props;
---

<iframe
  width={ancho}
  height={alto}
  style="border:0;"
  loading="lazy"
  allowfullscreen
  referrerpolicy="no-referrer-when-downgrade"
  src={`https://maps.google.com/maps?q=${lat},${lon}&hl=es&z=${zoom}&output=embed`}
></iframe>
