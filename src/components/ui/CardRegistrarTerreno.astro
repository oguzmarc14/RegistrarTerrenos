<div
  class="relative min-h-screen bg-cover bg-center bg-no-repeat"
  style="background-image: url('/header1.webp')"
>
  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>

  <!-- Contenido -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 py-10">
    <!-- Cinta superior de título -->
    <div class="flex items-center justify-center gap-4 flex-col mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-white drop-shadow">
        Agregar terreno
      </h1>
      <div class="hidden md:flex items-center gap-3">
        <a href="#" class="px-4 py-2 bg-white text-sky-950 rounded-xl hover:scale-[1.02] transition">
          Ir a mis Terrenos
        </a>
        <a href="#" class="px-4 py-2 bg-white text-sky-950 rounded-xl hover:scale-[1.02] transition">
          Editar mis Terrenos
        </a>
      </div>
    </div>

    <!-- Formulario completo -->
    <form
  id="formularioTerreno"
  enctype="multipart/form-data"
  class="bg-sky-950/70 backdrop-blur-md rounded-2xl shadow-2xl p-6"
>
  <!-- CONTENEDOR HORIZONTAL -->
  <div class="flex flex-col md:flex-row md:justify-center items-stretch gap-12 mb-12">

    <!-- DIV #1: Inputs (izquierda) -->
    <div class="md:basis-2/3 grid grid-cols-1 md:grid-cols-2 gap-4">
      <input
        name="titulo"
        placeholder="Nombre del terreno"
        required
        class="md:col-span-2 border border-white/20 bg-white/10 text-white placeholder-white/60 p-3 rounded focus:ring-2 focus:ring-amber-600"
      />

      <textarea
        name="descripcion"
        placeholder="Descripción"
        required
        class="md:col-span-2 h-28 border border-white/20 bg-white/10 text-white placeholder-white/60 p-3 rounded resize-none focus:ring-2 focus:ring-amber-600"
      ></textarea>

      <input
        name="precio"
        type="number"
        placeholder="Precio"
        required
        class="border border-white/20 bg-white/10 text-white placeholder-white/60 p-3 rounded focus:ring-2 focus:ring-amber-600"
      />

      <input
        name="medidas"
        placeholder="Medidas (Ej. 120x60)"
        class="border border-white/20 bg-white/10 text-white placeholder-white/60 p-3 rounded focus:ring-2 focus:ring-amber-600"
      />

      <input
        name="ubicacion"
        placeholder="Ubicación"
        class="md:col-span-2 border border-white/20 bg-white/10 text-white placeholder-white/60 p-3 rounded focus:ring-2 focus:ring-amber-600"
      />

      <select
        name="tipo"
        required
        class="md:col-span-2 border border-white/20 bg-gray-700 text-white p-3 rounded focus:ring-2 focus:ring-amber-600"
      >
        <option value="">Selecciona el tipo de propiedad</option>
        <option value="terreno">Terreno</option>
        <option value="casa">Casa</option>
        <option value="comercial">Propiedad Comercial</option>
        <option value="departamento">Departamento</option>
        <option value="terreno-comercial">Terreno Comercial</option>
      </select>
    </div>

    <!-- DIV #2: Imágenes + Tips (derecha) -->
    <div class="md:basis-1/3 flex flex-col justify-center items-center space-y-6">
      <!-- Dropzone -->
      <div class="flex justify-center">
        <div class="flex flex-col items-center justify-center h-48 w-56 border-2 border-dashed border-white/25 rounded-xl text-white text-center p-6 hover:border-amber-500 transition">
          <input type="file" id="imagen" name="imagenes" accept="image/*" required multiple class="hidden" />
          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mb-3 opacity-70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V7M3 7l9 6 9-6" />
          </svg>
          <label for="imagen" class="px-5 py-2 bg-white/10 hover:bg-white/20 rounded-md cursor-pointer transition">
            Seleccionar imágenes
          </label>
          <p class="text-xs text-white/60 mt-2">Convertir a WEBP</p>
        </div>
      </div>

      <!-- Tips -->
      <div class="w-full">
        <h3 class="text-white/80 font-medium">Tips rápidos</h3>
        <ul class="text-white/70 text-sm space-y-2 list-disc list-inside">
          <li>Usa un título corto y claro.</li>
          <li>Agrega al menos 3 fotos.</li>
          <li>Incluye medidas y ubicación exactas.</li>
        </ul>
      </div>

      <!-- Previews -->
      <div id="previewContainer" class="w-full flex gap-3 overflow-x-auto no-scrollbar pb-2"></div>
    </div>

  </div>

  <!-- Botón Submit -->
  <div class="mt-6 flex justify-center">
    <button
      type="submit"
      id="botonSubmit"
      disabled
      class="bg-green-700 text-white px-8 py-3 rounded-md opacity-50 cursor-not-allowed transition"
    >
      Subir terreno
    </button>
  </div>
</form>

  </div>
</div>

<script type="module" src="/ts/RegistrarTerreno.js"></script>
